generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Admin / Owner Roles ─────────────────────────────────
enum Role {
  ADMIN
  OWNER
  PLAYER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      Role     @default(PLAYER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sites     Site[]   @relation("OwnerSites")
}

model Site {
  id        Int      @id @default(autoincrement())
  domain    String   @unique
  name      String
  template  String   @default("playbaji")
  logoUrl   String?
  config    Json?
  isActive  Boolean  @default(true)
  ownerId   Int?
  owner     User?    @relation("OwnerSites", fields: [ownerId], references: [id])
  currencies SiteCurrency[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Currency {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  symbol    String
  rate      Float    @default(1.0)
  sites     SiteCurrency[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteCurrency {
  id         Int      @id @default(autoincrement())
  siteId     Int
  currencyId Int
  isDefault  Boolean  @default(false)
  site       Site     @relation(fields: [siteId], references: [id])
  currency   Currency @relation(fields: [currencyId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  @@unique([siteId, currencyId])
}

model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ─── Betting System ───────────────────────────────────────

model Player {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  username     String   @unique
  passwordHash String
  balance      Decimal  @default(0) @db.Decimal(18, 2)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bets         Bet[]
  transactions Transaction[]
}

enum BetStatus {
  PENDING
  WON
  LOST
  VOIDED
}

model Bet {
  id           Int       @id @default(autoincrement())
  playerId     Int
  matchId      String    // BetsAPI event ID
  matchName    String
  league       String    @default("")
  market       String    // e.g. "Match Odds"
  selection    String    // "1" | "X" | "2" etc.
  oddsType     String    // "Back" | "Lay"
  odds         Decimal   @db.Decimal(10, 4)
  stake        Decimal   @db.Decimal(18, 2)
  potentialWin Decimal   @db.Decimal(18, 2)
  status       BetStatus @default(PENDING)
  createdAt    DateTime  @default(now())
  settledAt    DateTime?
  player       Player    @relation(fields: [playerId], references: [id])
}

model Transaction {
  id            Int      @id @default(autoincrement())
  playerId      Int
  type          String   // DEPOSIT | WITHDRAWAL | BET_PLACED | BET_WON | BET_REFUND
  amount        Decimal  @db.Decimal(18, 2)
  balanceBefore Decimal  @db.Decimal(18, 2)
  balanceAfter  Decimal  @db.Decimal(18, 2)
  ref           String?  // betId or payment reference
  note          String?
  createdAt     DateTime @default(now())
  player        Player   @relation(fields: [playerId], references: [id])
}
